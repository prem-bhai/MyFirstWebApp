@* -------------------------------------------
   Modern Responsive Layout for THE-ELECTRONIC'S SHOP
   Project: MyFirstWebApp
   ------------------------------------------- *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyFirstWebApp</title>

    <!-- Google Fonts for modern look -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap, Icons & Custom Styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyFirstWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- 🌐 Header / Navbar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-lightning-charge-fill text-primary me-2 fs-4"></i>
                    <span class="fw-bold text-primary">THE-ELECTRONIC'S SHOP</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark fw-semibold" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark fw-semibold" asp-controller="Home" asp-action="Products">Products</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark fw-semibold" asp-controller="Home" asp-action="Privacy">Contact Us</a>
                        </li>

                        <!-- 🛒 Cart Page Link -->
                        <li class="nav-item mx-2">
                            <a class="nav-link text-dark fw-semibold position-relative" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart3 me-1 text-primary fs-5"></i>
                                Cart
                            </a>
                        </li>

                        <!-- 👤 Account Links -->
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item ms-3">
                                <a class="btn btn-outline-primary fw-semibold shadow-sm" asp-controller="Account" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right me-1"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-3">
                                <a class="btn btn-outline-primary fw-semibold shadow-sm" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i> Register
                                </a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-primary fw-semibold shadow-sm" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ✨ Hero Section (only on Home) -->
    @if (ViewData["Title"]?.ToString() == "Home" || string.IsNullOrEmpty(ViewData["Title"]?.ToString()))
    {
        <section class="text-center py-5" style="background: linear-gradient(135deg, #1b6ec2, #3a89f4); color: #fff;">
            <div class="container py-4">
                <h1 class="display-5 fw-bold mb-3">Welcome to THE-ELECTRONIC'S SHOP</h1>
                <p class="lead mb-4">Discover top-quality electronics at unbeatable prices — all in one place.</p>
                <a href="/Home/Products" class="btn btn-light btn-lg fw-semibold shadow-sm">
                    Explore Products
                </a>
            </div>
        </section>
    }

    <!-- 🧭 Main Body -->
    <div class="container my-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
<!-- 🦶 Footer -->
<footer class="footer text-center py-4" style="background-color: #f8f9fa; border-top: 2px solid #dee2e6;">
    <div class="container">
        <p class="mb-1 text-muted">&copy; @DateTime.Now.Year - THE-ELECTRONIC'S SHOP | Register to continue shopping</p>
        <p class="mb-0">
            <a class="text-decoration-none text-primary fw-semibold" href="https://learn.microsoft.com/aspnet/core/" target="_blank">Documentation</a> |
            <a class="text-decoration-none text-primary fw-semibold" asp-controller="Home" asp-action="Privacy">Contact</a>
        </p>
    </div>
</footer>


    <!-- ⚙️ Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
